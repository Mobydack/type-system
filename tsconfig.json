
{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "rootDir": "src",
    "strict": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es5",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}